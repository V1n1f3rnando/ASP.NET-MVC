
@{
    ViewBag.Title = "Edicao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edição de Plano</h2>
<a href="/Home/Index">Página Inicial</a>
<hr />

@*Model da página*@
@model Estudo01.Models.PlanoEdicaoViewModel

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">

            <!-- campo oculto -->
            @Html.HiddenFor(model => model.IdPlano)

            <label>Nome do plano:</label>
            @Html.TextBoxFor(model => model.Nome,
           new
           {
               @class = "form-control",
               @placeholder = "Digite o nome do plano."
           })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>

            <br />

            <label> Descrição do plano:</label>
            @Html.TextBoxFor(model => model.Descricao,
           new
           {
               @class = "form-control",
               @placeholder = "Digite a descrição do plano."
           })

            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </span>

            <br />

            <input type="submit" class="btn btn-success" value="Atualizar plano" />
            <hr />

            <strong>@ViewBag.Mensagem</strong>

        </div>
    </div>
}

