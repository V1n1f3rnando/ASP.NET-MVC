
@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Planos</h2>
<a href="/Home/Index">Página Inicial</a>
<hr />

@* Classe modelo da página *@
@model Estudo01.Models.PlanoCadastroViewModel

@* Formulário de Cadastro d eplano *@
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">
            @* Usando Razor para montar os campos da page *@ 
            <label>Nome do plano:</label>
            @Html.TextBoxFor(model => model.Nome, new
    {
        @class = "form-control",
        @placeholder = "Digite o nome do plano"
    })
            <br />

            <label>Descrição do plano:</label>
            @Html.TextBoxFor(model => model.Descricao, new
    {
        @class = "form-control",
        @placeholder = "Digite a descrição do plano"
    })
    <br />
            <input type="submit" class="btn btn-success"
                   value="Cadastrar Plano" />

        </div>
    </div>
}



