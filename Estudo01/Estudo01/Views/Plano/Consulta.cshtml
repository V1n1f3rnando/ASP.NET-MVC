
@{
    ViewBag.Title = "Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consulta de Planos</h2>
<a href="/Home/Index">Página Inicial</a>
<hr />

@*Classe modelo da página*@
@model  List<Estudo01.Models.PlanoConsultaViewModel>

<div>
    <strong>@ViewBag.Mensagem</strong>
</div>

<!--Tabela para exibir os planos-->
<table class="table table-bordered table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome do produto</th>
            <th>Descrição</th>
            <th>Operações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdPlano</td>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>
                    <a href="/Plano/Edicao" class="btn btn-primary">Atualizar</a>
                    <a href="#" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">
                Quantidade de planos: @Model.Count
            </td>
        </tr>
    </tfoot>
</table>

